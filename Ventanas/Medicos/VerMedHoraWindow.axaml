<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        x:Class="ProyectoConsultorio.VerMedHoraWindow"
		Icon="/Recursos/Imagenes/icono_margen.png"
        Title="Ver horas médico" Width="800" Height="800" Background="#1BA1E2">
	<StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Orientation="Horizontal">
		<Calendar x:Name="calendar" SelectionMode="MultipleRange"/>
		<Border Margin="10" BorderBrush="Black" BorderThickness="2" Padding="10" CornerRadius="10">
			<StackPanel Orientation="Vertical" >
				<TextBlock Text="Doctores disponibles en el día seleccionado" FontSize="20" Margin="10"/>
				<TextBlock HorizontalAlignment="Left" Margin="10" FontSize="15">
					Nombre: <LineBreak />
					Apellido: <LineBreak />
					Hora disponible:
				</TextBlock>
				<StackPanel>
					<Button Content="Volver" Click="VolverMenu" HorizontalContentAlignment="Center" Margin="10" VerticalContentAlignment="Center" Width="75" Height="30"/>
				</StackPanel>
			</StackPanel>
		</Border>
	</StackPanel>

	
		
</Window>
