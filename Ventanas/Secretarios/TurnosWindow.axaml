<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="ProyectoConsultorio.TurnosWindow"
		Icon="/Recursos/Imagenes/icono_margen.png"
		WindowState="Maximized"
        Title="Manejo de turnos" Width="800" Height="600" Background="#1BA1E2">
	
	<ScrollViewer>
	<StackPanel HorizontalAlignment="Center" VerticalAlignment="Top">
		<TabControl Margin="5">
			<TabItem Header="Limpieza">
				<ListBox x:Name="lbLimpieza" Width="600" Height="300" />
			</TabItem>

			<TabItem Header="Seguridad">
				<ListBox x:Name="lbSeguridad" Width="600" Height="300" />
			</TabItem>
		</TabControl>

		<Button Content="Volver" Click="VolverMenu" HorizontalContentAlignment="Center" Margin="10" VerticalContentAlignment="Center" Width="75" Height="30"/>
	</StackPanel>
	</ScrollViewer>
</Window>
